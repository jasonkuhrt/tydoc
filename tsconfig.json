{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // for dedent, decompress
    "esModuleInterop": true,
    "incremental": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@tydoc/extractor": ["./packages/extractor/source/"]
    }
  },
  "plugins": [
    {
      "name": "typescript-snapshots-plugin"
    }
  ]
}
