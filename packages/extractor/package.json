{
  "name": "tydoc",
  "description": "The TypeScript documenter that meets you where you are",
  "version": "0.0.0-dripip",
  "main": "dist/index.js",
  "license": "MIT",
  "bin": "dist/cli/main.js",
  "files": [
    "dist",
    "types.d.ts",
    "types.js",
    "oclif.manifest.json"
  ],
  "scripts": {
    "build:docs:toc": "doctoc README.md",
    "build:docs:api": "ts-node scripts/build-api-docs",
    "build:docs": "yarn build:docs:api && yarn build:docs:toc",
    "build:oclif": "oclif-dev manifest",
    "build:ts": "tsc",
    "build": "yarn clean && yarn build:oclif && yarn build:ts",
    "dev": "tsc -w",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "dev:test": "jest --watch",
    "test": "jest",
    "test:dev": "yarn -s dev:test",
    "format": "prettier --write .",
    "prepublishOnly": "yarn build",
    "release:stable": "dripip stable",
    "release:preview": "dripip preview"
  },
  "dependencies": {
    "@microsoft/tsdoc": "^0.12.21",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.0",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.165",
    "chaindown": "^0.1.0-next.1",
    "debug": "^4.3.1",
    "dedent": "^0.7.0",
    "doctoc": "^1.4.0",
    "fs-jetpack": "^4.1.0",
    "globby": "^11.0.1",
    "json5": "^2.1.3",
    "kleur": "^4.1.3",
    "lodash": "^4.17.20",
    "prettier": "^2.2.1",
    "ts-morph": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.24.1",
    "@prisma-labs/prettier-config": "0.1.0",
    "@types/decompress": "^4",
    "@types/dedent": "^0.7.0",
    "@types/jest": "26.0.15",
    "@types/json5": "^0.0.30",
    "@types/node": "14.14.10",
    "@types/prettier": "2.1.5",
    "axios": "^0.21.0",
    "decompress": "^4.2.1",
    "dripip": "0.10.0",
    "jest": "26.6.3",
    "jest-validate": "26.6.2",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "0.6.1",
    "tempy": "^1.0.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0",
    "type-fest": "^0.20.2"
  },
  "prettier": "@prisma-labs/prettier-config",
  "jest": {
    "preset": "ts-jest",
    "watchPlugins": [
      "jest-watch-suspend",
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ],
      [
        "jest-watch-toggle-config",
        {
          "setting": "bail"
        }
      ]
    ],
    "snapshotSerializers": [
      "./test/__helpers__/snapshotSerializer.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/oclif.manifest.json"
    ],
    "setupFiles": [
      "./test/setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "test/tsconfig.json",
        "diagnostics": false
      }
    }
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "tydoc",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
